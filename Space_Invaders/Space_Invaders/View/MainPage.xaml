<Page
    x:Class="Space_Invaders.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Space_Invaders.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="pageRoot"
    xmlns:viewmodel="using:Space_Invaders.ViewModel"
    SizeChanged="pageRoot_SizeChanged"
    ManipulationMode="TranslateX" ManipulationDelta="pageRoot_ManipulationDelta"
    ManipulationCompleted="pageRoot_ManipulationCompleted" Tapped="pageRoot_Tapped">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border x:Name="playArea" BorderBrush="Blue" BorderThickness="2" CornerRadius="10" Background="Black" Margin="5" Grid.Row="1" Loaded="playArea_Loaded">
            
        </Border>
    </Grid>
</Page>
